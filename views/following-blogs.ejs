<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HOME | Colidea</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
        integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/mainHome.css">
    <link rel="stylesheet" href="/css/loginGeneral.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/all.css">
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/sharp-solid.css">
    <link rel="stylesheet" href="/css/output.css">
    <link rel="stylesheet" href="/css/additional.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simplebar/5.3.0/simplebar.min.css">

    <!-- Include SimpleBar JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/simplebar/5.3.0/simplebar.min.js"></script>
</head>
<body class="bg-gray-900">
    <nav class="bg-gray-800 shadow-lg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <a href="/dashboard" class="flex-shrink-0 flex items-center">
                        <i class="text-gray-50 text-xl fa-solid fa-objects-column"></i>
                        <span class="text-gray-300 text-lg ml-2 font-semibold">Colidea</span>
                    </a>
                </div>
                <form action="/search" class="flex items-center" style="width: 40%;">
                    <input class="h-9 bg-slate-700 rounded-md my-auto w-full outline-none pl-4 text-slate-300"
                        type="search" name="query" id="searchInput" placeholder="Type here to search..." autocomplete="off" required>
                    <button id="searchButton"
                        class="px-4 h-9 py-2 bg-slate-900 rounded-md text-slate-400 text-center">search</button>
                </form>
                <div class="flex items-center">
                    <div class="hidden md:block">
                        <a href="/following-blogs"
                            class="bg-gray-700 text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        <a href="#"
                            class="text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">About</a>
                        <a href="/explore"
                            class="text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Explore</a>
                        <a href="/dashboard"
                            class="text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                        </div>
                        <form action="/logout" method="get">
                            <button type="submit"
                                class="ml-1 text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium"
                                title="Sign Out"><i class="fa-duotone fa-power-off"></i></button>
                        </form>
                    </div>
                </div>
                <div class="flex md:hidden">
                    <button class="text-gray-300 hover:bg-gray-700 p-2 rounded-md">
                        <svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            viewBox="0 0 24 24" stroke="currentColor">
                            <path d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        
        <% if (followingBlogs.length === 0) { %>
            <h1 class="text-2xl font-bold text-center mb-5 text-slate-400 mt-5">Blogs from Users You're Following</h1>
            <p class="text-center text-lg text-slate-400">Follow users to see their blogs or search users by their firstName or username</p>

            <div class="collection">
                <div class="fetchers grid grid-cols-6 gap-4 p-7">
                    <% everyOne.forEach(user=> { %>
                        <div class="user-card bg-slate-700 pl-2 gap-3 py-4 rounded-md" style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
                            <i class="fa-duotone fa-user bg-slate-400 h-16 w-16 text-slate-800 text-3xl" style="display: flex; justify-content: center; align-items: center; border-radius: 50%;"></i>
                            <a href="/profile/<%= user._id %>" style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
                                <p class="text-slate-100"><%=user.firstName%> <%=user.lastName%></p>
                                <%if(user.username === 'hdwarade') {%>
                                <div class="flex gap-2">
                                    <p class="flex justify-center items-center text-slate-400">@<%= user.username %> (<%= user.country %>)</p>
                                    <i class="flex justify-center items-center text-blue-500 fa-solid fa-badge-check" style="cursor: pointer;"
                                    title="Developer | Verified"></i>
                                </div>
                                <% } else { %>
                                <p class="text-slate-400">@<%= user.username %> (<%= user.country %>)</p>
                                <%}%>
                                <p class="text-slate-500">Followers: <%=user.followers.length%></p>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>

        <% } else { %>
            <div class="flex flex-col mb-11">
                <h1 class="h-20 text-slate-400 flex justify-center items-center text-xl font-bold gap-1">Blogs from the people you follow, for more people visit the "explore" tab</h1>
                
                <div style="display: grid; gap: 2rem; grid-template-columns: 1fr 2fr 1fr">
                    <div class="userInfo bg-slate-800 rounded-md" style="display: flex; justify-content: center; align-items: center; height: min-content; flex-direction: column; gap: 1rem; padding: 20px;">
                        <i class="fa-duotone fa-user text-slate-400" style="font-size: 4rem;"></i>
                        <div class="flex flex-col items-center content-center">
                            <p class="text-slate-300"><%=rootUser.firstName%> <%=rootUser.lastName%> <a href="/dashboard">@<%=rootUser.username%></a></p>
                            <p class="text-slate-500 text-sm text-center mt-1"><%=rootUser.bio%></p>
                        </div>
                    </div>
                    <div class="mainIterationHolder grid gap-4">
                        <% followingBlogs.forEach(blog => { %>
                            <div class="bg-slate-800 p-4 rounded-md subdiv">
                                <div class="bundle flex items-center" style="justify-content: space-between;">
                                    <h2 class="text-xl font-bold text-slate-200"><%= blog.title %>
                                    </h2>
                                    <% if(blog.author.username == "hdwarade") { %>
                                        <a href="/profile/<%= blog.author._id %>" class="text-slate-400 text-sm font-thin">@<%=blog.author.username%> <i class="text-blue-400 fa-solid fa-badge-check" title="Verified" style="cursor: pointer;"></i></a>
                                    <% } else { %> 
                                        <a href="/profile/<%= blog.author._id %>" class="text-slate-400 text-sm font-thin">@<%=blog.author.username%></a>
                                    <% } %>
                                </div>
                                <hr class="text-slate-200 mt-3">
                                <pre class="text-slate-300 mt-4 max-h-72" id="taghere" style="white-space: pre-wrap;"><p style="overflow-x: hidden;"><%= blog.content %></p></pre>
                                <div class="interactionSection mt-1" style="display: flex;
                                justify-content: space-between;
                                align-items: center;">
                                    <a href="/detailed-view/<%= blog._id %>" class="text-slate-400" style="text-decoration: underline;">View all comments</a>
                                    <button class="text-blue-300 rounded-md py-2 commentButton"
                                        data-blog-id="<%= blog._id %>">
                                        <i class="fa-light fa-comment-dots text-lg"></i>
                                    </button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>


    <div id="commentModal" class="modal">
        <div class="modal-content bg-slate-800 rounded-md p-4 mx-auto my-1/2">
            <span class="close text-white cursor-pointer">&times;</span>
            <form id="commentFormModal" method="POST" class="commentForm mt-4 flex">
                <input type="text" name="comment" class="w-11/12 h-10 bg-slate-700 rounded-md px-3 py-2 text-slate-300 outline-none"
                    placeholder="Comment here..." autocomplete="off" required>
                <input type="hidden" name="blogId" id="commentBlogId">
                <div class="w-1/12 flex items-center justify-center">
                    <button class="text-slate-300 rounded-md px-3 py-2" type="submit"><i class="fa-duotone fa-paper-plane"></i></button>
                </div>
            </form>
        </div>
    </div>


    <script>
        const commentButtons = document.querySelectorAll('.commentButton');
        const commentModal = document.getElementById('commentModal');
        const commentFormModal = document.getElementById('commentFormModal');
        const commentBlogIdInput = document.getElementById('commentBlogId');
        const closeCommentModal = commentModal.querySelector('.close');
    
        commentButtons.forEach(button => {
            button.addEventListener('click', () => {
                const blogId = button.getAttribute('data-blog-id');
                commentBlogIdInput.value = blogId;
                commentFormModal.action = `/comment/${blogId}`;
                commentModal.style.display = 'block';
            });
        });
    
        closeCommentModal.addEventListener('click', () => {
            commentModal.style.display = 'none';
        });
    
        window.addEventListener('click', (event) => {
            if (event.target === commentModal) {
                commentModal.style.display = 'none';
            }
        });
    </script>

    <!-- JavaScript scripts and closing tags -->
</body>
</html>
